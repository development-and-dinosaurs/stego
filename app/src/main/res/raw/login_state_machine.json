{
  "initial": "Idle",
  "initialContext": {
    "username": "sean"
  },
  "states": {
    "Idle": {
      "id": "Idle",
      "type": "ui",
      "uiNode": {
        "type": "column",
        "children": [
          {
            "type": "text_field",
            "label": "Username",
            "text": "{username}",
            "onTextChanged": {
              "type": "TEXT_CHANGED",
              "data": {
                "text": "{text}"
              }
            }
          },
          {
            "type": "button",
            "text": "Log In",
            "onClick": {
              "type": "SUBMIT"
            }
          }
        ]
      },
      "on": {
        "TEXT_CHANGED": [
          {
            "target": "Idle",
            "actions": [
              {
                "type": "assign",
                "key": "username",
                "value": "{event.text}"
              }
            ]
          }
        ],
        "SUBMIT": [
          {
            "target": "Loading"
          }
        ]
      }
    },
    "Loading": {
      "id": "Loading",
      "type": "ui",
      "uiNode": {
        "type": "column",
        "children": [
          {
            "type": "progress_indicator"
          },
          {
            "type": "label",
            "text": "Reticulating splines..."
          }
        ]
      },
      "invoke": {
        "id": "login",
        "src": "LoginInvokable",
        "input": {
          "username": "{context.username}"
        }
      },
      "on": {
        "done.invoke.login": [
          {
            "target": "Success"
          }
        ],
        "error.invoke.login": [
          {
            "target": "Error",
            "actions": [
              {
                "type": "assign",
                "key": "error",
                "value": "{event.error}"
              }
            ]
          }
        ]
      }
    },
    "Success": {
      "id": "Success",
      "type": "ui",
      "uiNode": {
        "type": "column",
        "children": [
          {
            "type": "label",
            "text": "Welcome, {username}!"
          }
        ]
      }
    },
    "Error": {
      "id": "Error",
      "type": "ui",
      "uiNode": {
        "type": "column",
        "children": [
          {
            "type": "label",
            "text": "Error for {username}: {error}"
          },
          {
            "type": "button",
            "text": "Retry",
            "onClick": {
              "type": "RETRY"
            }
          }
        ]
      },
      "on": {
        "RETRY": [
          {
            "target": "Idle"
          }
        ]
      }
    }
  }
}
